{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "lib": ["esnext"],
    "types": ["node", "jest"],
    "typeRoots": ["../../node_modules/@types"],
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@shared/*": ["./libs/shared/src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./jest-global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}

