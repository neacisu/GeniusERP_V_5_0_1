{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "vitest/globals",
      "jest",
      "cypress",
      "@playwright/test",
      "@testing-library/jest-dom"
    ],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "reports"
  ]
}

