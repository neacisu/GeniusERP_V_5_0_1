    {
      "id": 11,
      "type": "table",
      "title": "üìã Status Containere (din loguri)",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 41},
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [{
        "expr": "sum by(container) (count_over_time({job=~\".+\"}[1m]))",
        "refId": "A",
        "instant": true
      }],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        }
      },
      "transformations": [{
        "id": "organize",
        "options": {
          "renameByName": {
            "container": "Container",
            "Value": "Linii Log (ultima min)"
          }
        }
      }]
    },
    {
