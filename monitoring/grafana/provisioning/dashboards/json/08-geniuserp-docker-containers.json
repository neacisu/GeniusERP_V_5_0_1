      "title": "‚ö†Ô∏è Containere cu Erori",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 35},
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [{
        "expr": "count(count by(container) (rate({job=~\".+\"} |~ \"(?i)error\" [5m])))",
