      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [{
        "expr": "sum by(container) (rate({job=~\".+\"}[1m]))",
        "legendFormat": "{{container}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "showPoints": "never",
            "stacking": {"mode": "normal"}
          },
          "color": {"mode": "palette-classic"},
          "unit": "logs/s"
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["sum", "mean", "last"]
        }
      }
    },
