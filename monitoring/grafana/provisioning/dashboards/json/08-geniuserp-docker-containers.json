  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "üìã Loguri Container GeniusERP App",
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 0},
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [{
        "expr": "{container=\"geniuserp-app\"}",
        "refId": "A"
      }],
      "options": {
        "showTime": true,
        "showLabels": false,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 2,
      "type": "logs",
      "title": "üóÑÔ∏è Loguri PostgreSQL",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 0},
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [{
        "expr": "{container=\"geniuserp-postgres\"}",
        "refId": "A"
      }],
      "options": {
        "showTime": true,
        "showLabels": false,
        "wrapLogMessage": true,
