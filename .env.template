# ==============================================
# GENIUS ERP - Environment Variables Template
# ==============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# Command: cp .env.template .env
# DO NOT commit .env to version control!
# ==============================================

# -----------------
# Application Settings
# -----------------
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_SQL_LOGGING=true
VITE_DEV_SERVER_URL=http://localhost:5000

# -----------------
# Database Configuration (PostgreSQL 17)
# -----------------
# Primary connection string (uses local Docker PostgreSQL)
DATABASE_URL=postgres://postgres:postgres@localhost:5433/geniuserp

# Individual PostgreSQL settings (for compatibility)
PGDATABASE=geniuserp
PGUSER=postgres
PGPASSWORD=postgres
PGHOST=localhost
PGPORT=5433

# Database migrations
RUN_MIGRATIONS=false

# -----------------
# Redis Configuration (Redis Cloud)
# -----------------
REDIS_HOST=redis-17293.c256.us-east-1-2.ec2.redns.redis-cloud.com
REDIS_PORT=17293
REDIS_PASSWORD=REPLACE_WITH_YOUR_REDIS_PASSWORD
REDIS_USERNAME=default
REDIS_URL=redis://default:REPLACE_WITH_YOUR_REDIS_PASSWORD@redis-17293.c256.us-east-1-2.ec2.redns.redis-cloud.com:17293

# -----------------
# Authentication & Security
# -----------------
# JWT Secret Keys (generate new ones for production: openssl rand -hex 32)
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET
JWT_REFRESH_SECRET=REPLACE_WITH_GENERATED_REFRESH_SECRET
JWT_EXPIRES_IN=24h
SESSION_SECRET=REPLACE_WITH_GENERATED_SESSION_SECRET

# -----------------
# Email & SMTP Configuration
# -----------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=REPLACE_WITH_YOUR_SMTP_PASSWORD
EMAIL_FROM=noreply@example.com

# -----------------
# Romanian ANAF API
# -----------------
ANAF_API_URL=https://webservicesp.anaf.ro/PlatitorTvaRest/api/v7/ws/tva
ANAF_API_VERSION=v7

# -----------------
# OpenAI Configuration
# -----------------
OPENAI_API_KEY=REPLACE_WITH_YOUR_OPENAI_KEY
OPENAI_ORGANIZATION=REPLACE_WITH_YOUR_OPENAI_ORG
OPENAI_DEFAULT_MODEL=gpt-4

# -----------------
# Stripe Payment Integration
# -----------------
STRIPE_SECRET_KEY=REPLACE_WITH_YOUR_STRIPE_SECRET
STRIPE_PUBLISHABLE_KEY=REPLACE_WITH_YOUR_STRIPE_PUBLISHABLE

# -----------------
# Server Ports (for Docker compatibility)
# -----------------
API_PORT=5000
FRONTEND_PORT=3000
POSTGRES_PORT=5433
ADMINER_PORT=8080

# -----------------
# Backup & Maintenance
# -----------------
BACKUP_RETENTION_DAYS=7
INITIAL_BACKUP=
