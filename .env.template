# Database Configuration (PostgreSQL 17 Local Docker)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/geniuserp
PGDATABASE=geniuserp
PGUSER=postgres
PGPASSWORD=postgres
PGHOST=postgres
PGPORT=5432

# Redis Cloud Configuration
# Vizitează: https://app.redislabs.com/#/databases pentru a obține credențiale
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@YOUR_REDIS_HOST:YOUR_REDIS_PORT
REDIS_HOST=your-redis-host.redns.redis-cloud.com
REDIS_PORT=17293
REDIS_PASSWORD=your-redis-password
REDIS_USERNAME=default

# JWT & Session Secrets
# Generează cu: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
SESSION_SECRET=your-session-secret-here

# SMTP Configuration (pentru trimitere email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@geniuserp.com

# ANAF Integration (API România)
ANAF_API_URL=https://webservicesp.anaf.ro
ANAF_API_VERSION=PlatDeplV2

# OpenAI Configuration (pentru funcționalități AI)
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-org-id
OPENAI_DEFAULT_MODEL=gpt-4

# Stripe Integration (plăți online)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_SQL_LOGGING=true

# Vite HMR Settings (Hot Module Replacement pentru development)
# Aceste setări permit Hot Reload automat la modificări în cod
VITE_DEV_SERVER_URL=http://localhost:5000
VITE_HMR_PROTOCOL=ws
VITE_HMR_HOST=localhost
VITE_HMR_PORT=5000
VITE_HMR_CLIENT_PORT=5000

# File Watching pentru Docker (necesar pentru HMR în Docker)
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=100

# Migrations
RUN_MIGRATIONS=false
