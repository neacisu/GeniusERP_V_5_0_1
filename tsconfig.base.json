{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "preserve",
    
    /* Strict Type-Checking */
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": false,
    
    /* Module Resolution */
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@geniuserp/shared": ["libs/shared/src/index.ts"],
      "@geniuserp/shared/*": ["libs/shared/src/*"],
      "@geniuserp/auth": ["libs/auth/src/index.ts"],
      "@geniuserp/auth/*": ["libs/auth/src/*"],
      "@geniuserp/accounting": ["libs/accounting/src/index.ts"],
      "@geniuserp/accounting/*": ["libs/accounting/src/*"],
      "@geniuserp/inventory": ["libs/inventory/src/index.ts"],
      "@geniuserp/inventory/*": ["libs/inventory/src/*"],
      "@geniuserp/hr": ["libs/hr/src/index.ts"],
      "@geniuserp/hr/*": ["libs/hr/src/*"],
      "@geniuserp/crm": ["libs/crm/src/index.ts"],
      "@geniuserp/crm/*": ["libs/crm/src/*"],
      "@geniuserp/invoicing": ["libs/invoicing/src/index.ts"],
      "@geniuserp/invoicing/*": ["libs/invoicing/src/*"],
      "@geniuserp/admin": ["libs/admin/src/index.ts"],
      "@geniuserp/admin/*": ["libs/admin/src/*"],
      "@geniuserp/analytics": ["libs/analytics/src/index.ts"],
      "@geniuserp/analytics/*": ["libs/analytics/src/*"],
      "@geniuserp/documents": ["libs/documents/src/index.ts"],
      "@geniuserp/documents/*": ["libs/documents/src/*"],
      "@geniuserp/audit": ["libs/audit/src/index.ts"],
      "@geniuserp/audit/*": ["libs/audit/src/*"],
      "@geniuserp/ai": ["libs/ai/src/index.ts"],
      "@geniuserp/ai/*": ["libs/ai/src/*"],
      "@geniuserp/sales": ["libs/sales/src/index.ts"],
      "@geniuserp/sales/*": ["libs/sales/src/*"],
      "@geniuserp/bpm": ["libs/bpm/src/index.ts"],
      "@geniuserp/bpm/*": ["libs/bpm/src/*"],
      "@geniuserp/ecommerce": ["libs/ecommerce/src/index.ts"],
      "@geniuserp/ecommerce/*": ["libs/ecommerce/src/*"],
      "@geniuserp/integrations": ["libs/integrations/src/index.ts"],
      "@geniuserp/integrations/*": ["libs/integrations/src/*"],
      "@geniuserp/marketing": ["libs/marketing/src/index.ts"],
      "@geniuserp/marketing/*": ["libs/marketing/src/*"],
      "@geniuserp/settings": ["libs/settings/src/index.ts"],
      "@geniuserp/settings/*": ["libs/settings/src/*"],
      "@geniuserp/users": ["libs/users/src/index.ts"],
      "@geniuserp/users/*": ["libs/users/src/*"],
      "@geniuserp/collab": ["libs/collab/src/index.ts"],
      "@geniuserp/collab/*": ["libs/collab/src/*"],
      "@geniuserp/comms": ["libs/comms/src/index.ts"],
      "@geniuserp/comms/*": ["libs/comms/src/*"],
      "@geniuserp/company": ["libs/company/src/index.ts"],
      "@geniuserp/company/*": ["libs/company/src/*"],
      "@common/*": ["apps/api/src/common/*"],
      "@api/*": ["apps/api/src/*"],
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", "build"]
}