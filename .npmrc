# Hoisting complet pentru compatibilitate Nx + TypeScript
# node-linker=hoisted forțează flat structure (elimină .pnpm symlinks)
node-linker=hoisted
shamefully-hoist=true
public-hoist-pattern[]=*

# Peer dependencies
auto-install-peers=true
strict-peer-dependencies=false

# Performance
prefer-workspace-packages=true
link-workspace-packages=true

# Compatibilitate
engine-strict=false

# Build scripts (permite pentru pachete de încredere)
enable-pre-post-scripts=true

