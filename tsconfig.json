{
  "extends": "./tsconfig.base.json",
  "include": [
    "apps/**/*",
    "libs/**/*",
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "migrations/**/*",
    "scripts/**/*",
    "*.config.ts"
  ],
  "exclude": [
    "utils/testing",
    "build",
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true
  }
}
